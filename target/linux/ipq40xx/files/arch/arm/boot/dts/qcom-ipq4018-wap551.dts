#include "qcom-ipq4019.dtsi"
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>
#include <dt-bindings/soc/qcom,tcsr.h>

/ {
	model = "Emplus WAP551";
	compatible = "emplus,wap551";

	aliases {
		led-boot = &led_status_blue;
		led-failsafe = &led_status_red;
		led-running = &led_status_green;
		led-upgrade = &led_status_blue;
	};

	tcsr@1949000 {
		compatible = "qcom,tcsr";
		reg = <0x1949000 0x100>;
		qcom,wifi_glb_cfg = <TCSR_WIFI_GLB_CFG>;
	};

	ess_tcsr@1953000 {
		compatible = "qcom,tcsr";
		reg = <0x1953000 0x1000>;
		qcom,ess-interface-select = <TCSR_ESS_PSGMII>;
	};

	tcsr@1957000 {
		compatible = "qcom,tcsr";
		reg = <0x1957000 0x100>;
		qcom,wifi_noc_memtype_m0_m2 = <TCSR_WIFI_NOC_MEMTYPE_M0_M2>;
	};

	watchdog {
		compatible = "linux,wdt-gpio";
		gpios = <&tlmm 5 GPIO_ACTIVE_LOW>;
		hw_algo = "toggle";
		hw_margin_ms = <30000>;
		always-running;
	};

	keys {
		compatible = "gpio-keys";

		reset {
			label = "reset";
			gpios = <&tlmm 59 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_RESTART>;
		};
	};

	leds {
		compatible = "gpio-leds";

		led_status_red: status_red {
			label = "red:status";
			gpios = <&tlmm 0 GPIO_ACTIVE_HIGH>;
		};

		led_status_green: status_green {
			label = "green:status";
			gpios = <&tlmm 1 GPIO_ACTIVE_HIGH>;
		};

		led_status_blue: status_blue {
			label = "blue:status";
			gpios = <&tlmm 3 GPIO_ACTIVE_HIGH>;
		};
	};
};

&tlmm {
	serial0_pins: serial0_pinmux {
		mux_uart {
			pins = "gpio60", "gpio61";
			function = "blsp_uart0";
			bias-disable;
		};
	};

	spi0_pins: spi0_pinmux {
		mux_spi {
			function = "blsp_spi0";
			pins = "gpio55", "gpio56", "gpio57";
			drive-strength = <12>;
			bias-disable;
		};

		mux_cs {
			function = "gpio";
			pins = "gpio54";
			drive-strength = <2>;
			bias-disable;
			output-high;
		};
	};

	mdio_pins: mdio_pinmux {
		mux_mdio {
			pins = "gpio53";
			function = "mdio";
			bias-pull-up;
		};

		mux_mdc {
			pins = "gpio52";
			function = "mdc";
			bias-pull-up;
		};
	};
};

&blsp1_uart1 {
	status = "okay";

	pinctrl-0 = <&serial0_pins>;
	pinctrl-names = "default";
};

&watchdog {
	status = "okay";
};

&prng {
	status = "okay";
};

&blsp_dma {
	status = "okay";
};

&blsp1_spi1 {
	status = "okay";

	pinctrl-0 = <&spi0_pins>;
	pinctrl-names = "default";
	cs-gpios = <&tlmm 54 GPIO_ACTIVE_HIGH>;

	flash@0 {
		compatible = "jedec,spi-nor", "n25q128a11";
		reg = <0>;
		spi-max-frequency = <24000000>;

		// Bootloader will populate the partitions
		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;
		};
	};
};

&mdio {
	status = "okay";

	pinctrl-0 = <&mdio_pins>;
	pinctrl-names = "default";
	reset-gpios = <&tlmm 63 GPIO_ACTIVE_LOW>;
};

&gmac {
	status = "okay";
};

&switch {
	status = "okay";
};

&swport3 {
	status = "okay";

	label = "ethernet3";
};

&swport4 {
	status = "okay";

	label = "ethernet2";
};

&swport5 {
	status = "okay";

	label = "ethernet1";
};

&wifi0 {
	status = "okay";
	qcom,ath10k-calibration-variant = "Emplus-WAP551";
};

&wifi1 {
	status = "okay";
	qcom,ath10k-calibration-variant = "Emplus-WAP551";
};
